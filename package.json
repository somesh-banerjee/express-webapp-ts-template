{
  "name": "express-app-template",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check .",
    "build:watch": "tsc --watch",
    "build:run": "nodemon dist/app.js",
    "start:dev": "yarn build && cross-env NODE_ENV=development concurrently \"yarn build:watch\" \"yarn build:run\"",
    "start:prod": "cross-env NODE_ENV=production node dist/app.js",
    "start": "cross-env NODE_ENV=development node dist/app.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.13",
    "axios": "^1.2.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.2",
    "rimraf": "^4.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
